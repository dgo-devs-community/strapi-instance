{
  "kind": "collectionType",
  "collectionName": "eventos",
  "info": {
    "singularName": "evento",
    "pluralName": "eventos",
    "displayName": "Evento"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Titulo": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "Titulo"
    },
    "Recurrente": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "FechaRecurrente": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "Recurrente"
            },
            true
          ]
        }
      }
    },
    "Fecha": {
      "type": "datetime",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "Recurrente"
            },
            false
          ]
        }
      },
      "default": "2025-09-19T01:00:00.000Z"
    },
    "Lugar": {
      "type": "string"
    },
    "Descripcion": {
      "type": "text"
    },
    "Banner": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Tipo": {
      "type": "enumeration",
      "enum": [
        "Taller",
        "Charlas",
        "Meetup"
      ]
    },
    "Formulario": {
      "type": "string"
    },
    "BlogEvento": {
      "type": "dynamiczone",
      "components": [
        "eventos.post-evento",
        "eventos.galeria-de-imagenes",
        "eventos.hero-image",
        "eventos.video"
      ]
    }
  }
}
